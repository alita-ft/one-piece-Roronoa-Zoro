.card {
  padding: 30rpx;
  color: #6F6F6F;
  font-size: 28rpx;
}
.card .list {
  padding: 20rpx;
  background:#fff;
  border-radius: 20rpx;
}
.card .line {
  display: flex;
  justify-content: space-between;
}
.card .item {
  width: 48%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top .item {
  height: 330rpx;
  flex-direction: column;
}
.top .item image {
  height: 180rpx;
  width: 180rpx;
}
.top .item text {
  margin-top: 20rpx;
}
.bottom .item {
  height: 200rpx;
  background: #f6f6f6;
}
.bottom .item image {
  height: 90rpx;
  width: 90rpx;
}
.bottom .item text {
  margin-left: 20rpx;
}
