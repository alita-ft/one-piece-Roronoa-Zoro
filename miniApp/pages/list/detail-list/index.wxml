    <van-button custom-style="width:45%;margin-right:15rpx;" type="primary" bind:click='addUser' data-addtype="admin">添加支行管理员</van-button>
    <van-button custom-style="width:45%;" type="primary" bind:click='addUser' data-addtype="user">添加支行用户</van-button>
  </view>
