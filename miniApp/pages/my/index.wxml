<view class="my">
  <view class="userInfo">
    <view class="userAvatarUrl">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="userNickName">Hi~,
      <open-data type="userNickName"></open-data>
    </view>
  </view>
  <view class="userActive">
    <view class="item" bindtap="toInfo" data-type="detail" wx:if="{{userInfo.userName}}">
      <text class="iconfont icon-gerenxinxi left"></text>
      <text class="text">个人信息</text>
      <text class="iconfont icon-xiangyou right"></text>
    </view>

    <view class="item" bindtap="toInfo" data-type="binding" wx:else>
      <text class="iconfont icon-bangding left"></text>
      <text class="text">信息认证</text>
      <text class="iconfont icon-xiangyou right"></text>
    </view>


    <view class="item">
      <text class="iconfont icon-banben left"></text>
      <text class="text">版本号: v1.0</text>
      <text class="iconfont icon-xiangyou right"></text>
    </view>
  </view>
</view>